# ============================================
# Python Template - Environment Configuration
# ============================================
# Copy this file to .env.development, .env.staging, or .env.production
# and customize the values for your environment.

# Application Info
SERVICE_NAME=Python Template
SERVICE_VERSION=v0.1.0
SERVICE_DESCRIPTION=Python FastAPI Template Service

# Server Configuration
HOST=0.0.0.0
SERVER_PORT=8020
LOG_LEVEL=INFO

# Docker Compose
COMPOSE_PROJECT_NAME=python_template
ENVIRONMENT=development

# Docker Network Configuration
# Set DOCKER_NETWORK_EXTERNAL=false for local development (creates networks)
# Set DOCKER_NETWORK_EXTERNAL=true for deployment (joins existing networks)
DOCKER_NETWORK_WEB=core_web
DOCKER_NETWORK_INTERNAL=core_internal
DOCKER_NETWORK_EXTERNAL=true

# Bind address for port mapping
# Use 127.0.0.1 for localhost-only (secure, recommended for production)
# Use 0.0.0.0 to expose on all interfaces (development only)
BIND_ADDRESS=127.0.0.1

# Traefik Configuration
TRAEFIK_ENABLED=false
TRAEFIK_DOMAIN=localhost:8020
TRAEFIK_NETWORK=core_web
TRAEFIK_ROUTER_NAME=python-template
TRAEFIK_ENTRYPOINT=websecure
TRAEFIK_CERT_RESOLVER=le
